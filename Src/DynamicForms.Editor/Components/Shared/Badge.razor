<span class="badge @VariantClass @Class">
    @ChildContent
</span>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public string Variant { get; set; } = "primary"; // primary, draft, published, info, warning, danger
    [Parameter] public string Class { get; set; } = "";

    private string VariantClass => Variant switch
    {
        "draft" => "badge-draft",
        "published" => "badge-published",
        "info" => "badge-info",
        "warning" => "badge-warning",
        "danger" => "badge-danger", // Need to define in CSS if not there
        _ => "badge-primary"
    };
}
