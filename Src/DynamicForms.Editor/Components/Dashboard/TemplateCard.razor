<div class="template-card" @onclick="HandleClick">
    <div class="template-icon"><i class="bi @Icon"></i></div>
    <div class="template-name">@Title</div>
    <div class="template-desc">@Description</div>
</div>

@code {
    [Parameter] public string Icon { get; set; } = "bi-file-earmark";
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Description { get; set; } = "";
    [Parameter] public string Id { get; set; } = "";
    [Parameter] public EventCallback<string> OnSelect { get; set; }

    private async Task HandleClick()
    {
        await OnSelect.InvokeAsync(Id);
    }
}
