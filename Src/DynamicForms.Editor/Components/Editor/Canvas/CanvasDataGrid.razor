@using DynamicForms.Core.V4.Runtime

<div class="canvas-datagrid">
    <label class="canvas-label">
        @(Field.Schema.LabelEn ?? Field.Schema.Id)
        @if (Field.Schema.Validation?.IsRequired == true)
        {
            <span class="required-marker">*</span>
        }
    </label>
    <table class="datagrid-preview">
        <thead>
            <tr>
                <th>Column 1</th>
                <th>Column 2</th>
                <th>Column 3</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Data 1</td>
                <td>Data 2</td>
                <td>Data 3</td>
            </tr>
            <tr>
                <td>Data 4</td>
                <td>Data 5</td>
                <td>Data 6</td>
            </tr>
        </tbody>
    </table>
    <div class="datagrid-actions">
        <button class="btn btn-sm btn-outline"><i class="bi bi-plus"></i> Add Row</button>
    </div>
    @if (!string.IsNullOrEmpty(Field.Schema.HelpEn))
    {
        <div class="canvas-help">@Field.Schema.HelpEn</div>
    }
</div>

@code {
    [Parameter] public FormFieldNode Field { get; set; } = default!;
}
