@using DynamicForms.Core.V4.Schemas
@using DynamicForms.Editor.Services
@inject EditorStateService EditorState

<div class="canvas-item @(IsSelected ? "selected" : "")" @onclick="OnSelect" @onclick:stopPropagation="true">
    <div class="field-header">
        <span class="field-label">@Field.LabelEn</span>
        <span class="field-type-badge">@Field.FieldType</span>
        @if (Field.Validation?.IsRequired == true)
        {
            <span class="text-danger">*</span>
        }
    </div>

    <div class="field-body">
        @if (Field.FieldType == "Section")
        {
            <div class="section-container">
                @foreach (var child in EditorState.GetChildren(Field.Id))
                {
                    <CanvasItem Field="@child" />
                }
                 @if (!EditorState.GetChildren(Field.Id).Any())
                {
                    <div class="empty-section">Empty Section</div>
                }
            </div>
        }
        else
        {
            <!-- Mock Input Rendering -->
            <div class="mock-input">
                @if (Field.FieldType == "TextBox" || Field.FieldType == "Number")
                {
                    <input type="text" class="form-control form-control-sm" disabled placeholder="@Field.PlaceholderEn" />
                }
                else if (Field.FieldType == "TextArea")
                {
                    <textarea class="form-control form-control-sm" disabled placeholder="@Field.PlaceholderEn"></textarea>
                }
                else if (Field.FieldType == "DropDown")
                {
                    <select class="form-select form-select-sm" disabled>
                        <option selected>Select...</option>
                    </select>
                }
                else if (Field.FieldType == "Checkbox")
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" disabled>
                        <label class="form-check-label">Option</label>
                    </div>
                }
                 else if (Field.FieldType == "DataGrid")
                {
                    <div class="mock-grid">
                        <table class="table table-bordered table-sm">
                            <thead><tr><th>Column 1</th><th>Column 2</th></tr></thead>
                            <tbody><tr><td>Data</td><td>Data</td></tr></tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="unknown-field">[ @Field.FieldType ]</div>
                }
            </div>
        }
    </div>
    
    <div class="field-actions">
        <button class="btn btn-xs btn-danger" @onclick="OnDelete" @onclick:stopPropagation="true" title="Delete">
            <i class="bi bi-trash"></i>
        </button>
    </div>
</div>

@code {
    [Parameter] public required FormFieldSchema Field { get; set; }

    private bool IsSelected => EditorState.SelectedField?.Id == Field.Id;

    private void OnSelect()
    {
        EditorState.SelectField(Field.Id);
    }

    private void OnDelete()
    {
        EditorState.RemoveField(Field.Id);
    }
}
