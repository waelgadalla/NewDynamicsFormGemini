    <EmptyState
        Icon="diagram-3"
        IconVariant="primary"
        Title="Create Your Workflow"
        Description="Add modules to build a multi-step workflow. Drag to arrange the order."
        PrimaryLabel="Add Module"
        PrimaryIcon="plus"
        PrimaryAction="OnAddModule" />
