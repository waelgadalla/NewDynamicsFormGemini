@* Modal for managing workflow-level conditional rules with tabbed interface *@
@using VisualEditorOpus.Models
@using VisualEditorOpus.Components.Shared
@using DynamicForms.Core.V4.Schemas
@using DynamicForms.Core.V4.Enums

<ModalBase @bind-IsOpen="IsOpen"
           Title="Workflow Rules"
           Icon="bi-diagram-3"
           Size="ModalSize.Large"
           OnClose="HandleCancel">
    <HeaderExtra>
        <span class="badge badge-primary">@GetActiveRuleCount() Active</span>
    </HeaderExtra>
    <ChildContent>
    <div class="workflow-rules-editor">
        @* Tabs Navigation *@
        <div class="rules-tabs">
            <button class="rules-tab @(activeTab == RuleTab.Skip ? "active" : "")"
                    @onclick="() => SetActiveTab(RuleTab.Skip)">
                <i class="bi bi-skip-forward"></i>
                <span>Skip Rules</span>
                <span class="tab-badge">@GetRuleCountByType("skipStep")</span>
            </button>
            <button class="rules-tab @(activeTab == RuleTab.GoTo ? "active" : "")"
                    @onclick="() => SetActiveTab(RuleTab.GoTo)">
                <i class="bi bi-arrow-return-right"></i>
                <span>Go To Rules</span>
                <span class="tab-badge">@GetRuleCountByType("goToStep")</span>
            </button>
            <button class="rules-tab @(activeTab == RuleTab.Completion ? "active" : "")"
                    @onclick="() => SetActiveTab(RuleTab.Completion)">
                <i class="bi bi-check-circle"></i>
                <span>Completion Rules</span>
                <span class="tab-badge">@GetRuleCountByType("completeWorkflow")</span>
            </button>
            <button class="rules-tab @(activeTab == RuleTab.Validation ? "active" : "")"
                    @onclick="() => SetActiveTab(RuleTab.Validation)">
                <i class="bi bi-shield-check"></i>
                <span>Validation Rules</span>
                <span class="tab-badge">@GetRuleCountByType("validate")</span>
            </button>
        </div>

        @* Rules Content *@
        @if (!isAddingRule && !isEditingRule)
        {
            <div class="rules-content">
                @{
                    var filteredRules = GetFilteredRules();
                }

                @if (filteredRules.Count > 0)
                {
                    <div class="rules-list">
                        @foreach (var rule in filteredRules)
                        {
                            var actionInfo = GetActionInfo(rule.Action);
                            <div class="rule-card @(rule.IsActive ? "" : "disabled")">
                                <div class="rule-header">
                                    <div class="rule-toggle-wrapper">
                                        <label class="toggle-switch">
                                            <input type="checkbox" checked="@rule.IsActive"
                                                   @onchange="@(() => ToggleRuleActive(rule.Id))" />
                                            <span class="toggle-slider"></span>
                                        </label>
                                    </div>
                                    <div class="rule-info">
                                        <h4 class="rule-name">@(string.IsNullOrEmpty(rule.Description) ? actionInfo.Label : rule.Description)</h4>
                                        <p class="rule-description">@GetRuleTargetDescription(rule)</p>
                                    </div>
                                    <span class="rule-type @actionInfo.CssClass">@actionInfo.Label</span>
                                    <div class="rule-actions">
                                        <button class="btn-icon" @onclick="@(() => EditRule(rule.Id))" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button class="btn-icon btn-danger" @onclick="@(() => DeleteRule(rule.Id))" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="rule-body">
                                    <div class="condition-display">
                                        <span class="condition-keyword">IF</span>
                                        <span class="condition-expression">@FormatCondition(rule.Condition)</span>
                                    </div>
                                    <div class="action-display">
                                        <div class="action-icon @actionInfo.CssClass">
                                            <i class="bi @actionInfo.Icon"></i>
                                        </div>
                                        <div class="action-content">
                                            <div class="action-label">@GetActionLabel(rule.Action)</div>
                                            <div class="action-value">@GetActionValue(rule)</div>
                                        </div>
                                        <div class="priority-badge">Priority: @rule.Priority</div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <div class="empty-state-icon">
                            <i class="bi @GetEmptyStateIcon()"></i>
                        </div>
                        <h4 class="empty-state-title">No @GetTabTitle() configured</h4>
                        <p class="empty-state-desc">@GetEmptyStateDescription()</p>
                        <button class="btn btn-primary" @onclick="AddRule" type="button">
                            <i class="bi bi-plus-lg"></i>
                            Add @GetTabTitle()
                        </button>
                    </div>
                }

                @if (filteredRules.Count > 0)
                {
                    <button class="add-rule-btn" @onclick="AddRule" type="button">
                        <i class="bi bi-plus-lg"></i>
                        Add @GetTabTitle()
                    </button>
                }
            </div>
        }

        @* Add/Edit Rule Section *@
        @if (isAddingRule || isEditingRule)
        {
            <div class="add-rule-section">
                <div class="section-header">
                    <h4>
                        <i class="bi @(isEditingRule ? "bi-pencil" : "bi-plus-circle")"></i>
                        @(isEditingRule ? "Edit Rule" : "Add New Rule")
                    </h4>
                    <button class="btn btn-ghost btn-sm" @onclick="CancelEdit" type="button">
                        <i class="bi bi-x"></i> Cancel
                    </button>
                </div>

                @* Action Type Selection - Only show if not in a specific tab *@
                @if (activeTab == RuleTab.Skip || activeTab == RuleTab.GoTo || activeTab == RuleTab.Completion)
                {
                    <div class="form-group">
                        <label class="form-label">Action Type</label>
                        <div class="action-cards">
                            @foreach (var action in GetAvailableActions())
                            {
                                <div class="action-card @(selectedAction == action.Id ? "selected" : "")"
                                     @onclick="@(() => SelectAction(action.Id))">
                                    <div class="action-card-icon @action.CssClass">
                                        <i class="bi @action.Icon"></i>
                                    </div>
                                    <div class="action-card-content">
                                        <div class="action-card-name">@action.Name</div>
                                        <div class="action-card-desc">@action.Description</div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">
                            Rule Description
                            <span class="required-indicator">*</span>
                        </label>
                        <input type="text"
                               class="form-input @(string.IsNullOrWhiteSpace(ruleDescription) ? "is-invalid" : "")"
                               @bind="ruleDescription"
                               placeholder="e.g., Skip employment step for minors" />
                    </div>

                    @if (selectedAction != "completeWorkflow" && selectedAction != "validate")
                    {
                        <div class="form-group">
                            <label class="form-label">
                                Target Step
                                <span class="required-indicator">*</span>
                            </label>
                            <select class="form-select" @bind="targetStepNumber">
                                <option value="">Select step...</option>
                                @foreach (var step in GetAvailableSteps())
                                {
                                    <option value="@step.Number">Step @step.Number: @step.Title</option>
                                }
                            </select>
                        </div>
                    }
                    else if (selectedAction == "validate")
                    {
                        <div class="form-group">
                            <label class="form-label">
                                Target Field
                                <span class="required-indicator">*</span>
                            </label>
                            <select class="form-select" @bind="targetFieldId">
                                <option value="">Select field...</option>
                                @foreach (var field in GetAllWorkflowFields())
                                {
                                    <option value="@field.Id">@field.Label</option>
                                }
                            </select>
                        </div>
                    }
                    else
                    {
                        <div class="form-group">
                            <label class="form-label">Target Step</label>
                            <div class="form-hint-block">
                                Not required for "Complete Workflow" action
                            </div>
                        </div>
                    }
                </div>

                <div class="form-group">
                    <label class="form-label">
                        Condition
                        <span class="required-indicator">*</span>
                    </label>
                    <div class="condition-input-row">
                        <input type="text"
                               class="form-input font-mono"
                               value="@FormatCondition(currentCondition)"
                               readonly
                               placeholder="Click 'Builder' to create condition" />
                        <button class="btn btn-outline" @onclick="OpenConditionBuilder" type="button">
                            <i class="bi bi-diagram-3"></i> Builder
                        </button>
                    </div>
                    @if (currentCondition == null)
                    {
                        <p class="validation-error">A condition is required</p>
                    }
                </div>

                <div class="form-group">
                    <label class="form-label">Priority</label>
                    <input type="number"
                           class="form-input"
                           @bind="rulePriority"
                           min="1"
                           max="1000"
                           style="max-width: 150px;" />
                    <p class="form-hint">Lower numbers have higher priority (default: 100)</p>
                </div>

                <div class="add-rule-actions">
                    <button class="btn btn-ghost" @onclick="CancelEdit" type="button">Cancel</button>
                    <button class="btn btn-primary"
                            @onclick="SaveRule"
                            disabled="@(!IsRuleValid)"
                            type="button">
                        <i class="bi @(isEditingRule ? "bi-check-lg" : "bi-plus")"></i>
                        @(isEditingRule ? "Update Rule" : "Add Rule")
                    </button>
                </div>
            </div>
        }
    </div>
    </ChildContent>
    <FooterContent>
        <div class="footer-info">
            <i class="bi bi-info-circle"></i>
            <span>Rules are evaluated in priority order (lower number = higher priority)</span>
        </div>
        <div class="footer-actions">
            <button class="btn btn-ghost" @onclick="HandleCancel" type="button">Cancel</button>
            <button class="btn btn-primary" @onclick="HandleSave" type="button">
                <i class="bi bi-check-lg"></i> Save Rules
            </button>
        </div>
    </FooterContent>

</ModalBase>

@* Condition Builder Modal - Integration placeholder *@
@if (showConditionBuilder)
{
    <ConditionBuilderModal @bind-IsOpen="showConditionBuilder"
                           ExistingRule="GetExistingRuleForConditionBuilder()"
                           OnSave="HandleConditionSaved"
                           OnCancel="@(() => showConditionBuilder = false)" />
}
