@inherits LayoutComponentBase
@implements IDisposable

<div data-theme="@(ThemeService.IsDarkMode ? "dark" : "light")">
    <GlobalNav />
    <div class="main-content">
        <VisualEditorOpus.Components.Shared.ErrorBoundary @ref="_errorBoundary" ShowDetails="@_showErrorDetails">
            @Body
        </VisualEditorOpus.Components.Shared.ErrorBoundary>
    </div>
    <ToastContainer />
</div>

@code {
    [Inject] private IThemeService ThemeService { get; set; } = default!;

    private VisualEditorOpus.Components.Shared.ErrorBoundary? _errorBoundary;
    private bool _showErrorDetails = false; // Set to true in development

    protected override void OnInitialized()
    {
        ThemeService.OnThemeChanged += StateHasChanged;
    }

    /// <summary>
    /// Recovers the error boundary when navigating to a new page.
    /// </summary>
    protected override void OnParametersSet()
    {
        _errorBoundary?.Recover();
    }

    public void Dispose()
    {
        ThemeService.OnThemeChanged -= StateHasChanged;
    }
}
